---
import { Image } from 'astro:assets';
import { AUTHOR } from '@/lib/author';
---

<aside class="mt-12 flex gap-4 rounded-lg border border-border p-6" aria-label="About the author">
  <Image
    src={AUTHOR.avatar}
    alt={AUTHOR.name}
    width={64}
    height={64}
    class="h-16 w-16 shrink-0 rounded-full object-cover"
  />
  <div>
    <p class="font-semibold">{AUTHOR.name}</p>
    <p class="text-sm text-muted-foreground">{AUTHOR.role}</p>
    <p class="mt-2 text-sm text-muted-foreground">{AUTHOR.bio}</p>
    <div class="mt-3 flex gap-4">
      <a
        href={AUTHOR.links.github}
        target="_blank"
        rel="noopener noreferrer"
        class="text-sm text-primary underline-offset-4 hover:underline"
      >
        GitHub
      </a>
      <a
        href={AUTHOR.links.linkedin}
        target="_blank"
        rel="noopener noreferrer"
        class="text-sm text-primary underline-offset-4 hover:underline"
      >
        LinkedIn
      </a>
    </div>
  </div>
</aside>
