---
import PageLayout from '../layouts/PageLayout.astro';
import { SITE } from '../lib/site';
---

<PageLayout title={SITE.name} description={SITE.description}>
  <main class="container mx-auto max-w-2xl px-4 py-16">
    <h1 class="text-2xl font-bold">{SITE.name}</h1>
    <p class="mt-2 text-muted-foreground">{SITE.description}</p>
    <div class="mt-6 flex gap-4">
      <a href="/articles" class="text-primary underline-offset-4 hover:underline">Articles</a>
      <a href="/about" class="text-primary underline-offset-4 hover:underline">About</a>
    </div>
  </main>
</PageLayout>
