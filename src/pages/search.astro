---
import PageLayout from '../layouts/PageLayout.astro';
import { SITE } from '../lib/site';
---

<PageLayout title={`Search | ${SITE.name}`} description={`Search articles on ${SITE.name}.`} loadPagefind>
  <main class="container mx-auto max-w-2xl px-4 py-16">
    <h1>Search</h1>
    <p class="mt-2 text-muted-foreground">Search across all articles.</p>
    <div id="search" class="mt-8"></div>
  </main>
  <script>
    window.addEventListener('DOMContentLoaded', () => {
      if (typeof PagefindUI !== 'undefined') {
        new PagefindUI({ element: '#search' });
      }
    });
  </script>
</PageLayout>
