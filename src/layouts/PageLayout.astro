---
import '../styles/global.css';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import BaseHead from '../components/seo/BaseHead.astro';
import { SITE } from '../lib/site';

interface Props {
  title: string;
  description?: string;
  canonical?: string;
  image?: string;
  structuredData?: string;
  /** Load Pagefind scripts (for search page) */
  loadPagefind?: boolean;
}

const { title, description, canonical, image, structuredData, loadPagefind } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} canonical={canonical} image={image} structuredData={structuredData} />
    <link rel="alternate" type="application/rss+xml" title={`${SITE.name} RSS`} href={`${SITE.url}/rss.xml`} />
    {loadPagefind && (
      <>
        <link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
        <script src="/pagefind/pagefind-ui.js" defer is:inline />
      </>
    )}
    <script is:inline>
      /* Runs before paint: set theme + platform so React avoids flash. */
      (function(){
        const s=localStorage.getItem('theme')||'system';
        const d=window.matchMedia('(prefers-color-scheme: dark)').matches;
        const isDark=s==='dark'||(s==='system'&&d);
        document.documentElement.classList.toggle('dark',isDark);
        if(/Mac|iPhone|iPod|iPad/i.test(navigator.userAgent))
          document.documentElement.classList.add('platform-mac');
      })();
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <div class="flex-1">
      <slot />
    </div>
    <Footer />
  </body>
</html>
